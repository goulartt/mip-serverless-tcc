<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="show_sql">true</property>
		<property name="connection.pool_size">1</property>

		<mapping class="com.amazonaws.lambda.field.model.Field"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.City"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.Farmer"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.Region"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.MacroRegion"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.State"></mapping>
		<mapping class="com.amazonaws.lambda.field.model.Supervisor"></mapping>

	</session-factory>
</hibernate-configuration>